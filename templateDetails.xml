<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 2.5//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/2.5/template-install.dtd">

<extension version="2.5" type="template" method="upgrade">
	
	<name>mason</name><!-- name the template -->
	<creationDate>2013-01-17</creationDate><!-- the date your are beginn to code -->
	<author>KevinSolomon</author><!-- your name (oops, I repeat myself) -->
	<copyright>Copyright Â© xxxx KevinSolomon.com</copyright><!-- for who you are coding -->
	<authorEmail>kevin@KevinSolomon.com</authorEmail><!-- your email address -->
	<authorUrl>http://www.KevinSolomon.com</authorUrl><!-- your url -->
	<version>1.0.0</version><!-- give your template a number -->
	<description><![CDATA[ 
		<h1>mason</h1>
		<p><img src="../templates/mason/template_preview.png" /></p>
		<h2>Module positions</h2>
		<ol>
			<li>debug</li>
		</ol>
		<p>Created by <a href="http://www.KevinSolomon.com" target="_blank">KevinSolomon | KevinSolomon.com</a>.</p>
	]]></description><!-- change the description as you like -->
	
	<files><!-- no need to change -->
		<folder>css</folder>
		<folder>html</folder>
		<folder>images</folder>
		<folder>js</folder>
		<filename>apple-touch-icon-57x57.png</filename>
		<filename>apple-touch-icon-72x72.png</filename>
		<filename>apple-touch-icon-114x114.png</filename>
		<filename>component.php</filename>
		<filename>error.php</filename>
		<filename>favicon.ico</filename>
		<filename>index.php</filename>
		<filename>offline.php</filename>
		<filename>template_preview.png</filename>
		<filename>template_thumbnail.png</filename>
		<filename>templateDetails.xml</filename>
	</files>
	
	<languages folder="language"><!-- no need to change -->
		<language tag="de-DE">de-DE.tpl_mason.ini</language>
		<language tag="en-GB">en-GB.tpl_mason.ini</language>
	</languages>
	
	<positions><!-- define the positions for modules here -->
		<position>debug</position>
	</positions>
	
	<config><!-- no need to change -->
		<fields name="params">
			<fieldset name="basic">
			  <!-- MODERNIZR-->
  			  <field name="modernizr" type="radio" default="1" label="TPL_TEMPLATENAME_PARAMETER_MODERNIZR_LABEL" description="TPL_TEMPLATENAME_PARAMETER_MODERNIZR_DESC">
  					<option value="0">JNO</option>
  					<option value="1">JYES</option>
  				</field>
  				<field name="TPL_TEMPLATENAME_PARAMETER_MODERNIZR_DOC" type="spacer" hr="false" />
  				<field type="spacer" hr="true" />
		    <!-- TWITTER BOOTSTRAP-->
  		    <field name="bootstrap" type="radio" default="0" label="TPL_TEMPLATENAME_PARAMETER_BOOTSTRAP_LABEL" description="TPL_TEMPLATENAME_PARAMETER_BOOTSTRAP_DESC">
  					<option value="0">JNO</option>
  					<option value="1">JYES</option>
  				</field>
  				<field name="TPL_TEMPLATENAME_PARAMETER_BOOTSTRAP_DOC" type="spacer" hr="false" />
  				<field type="spacer" hr="true" />
                <!-- MODERNIZR-->
                <field name="mootools" type="radio" default="0" label="TPL_TEMPLATENAME_PARAMETER_MOOTOOLS_LABEL" description="TPL_TEMPLATENAME_PARAMETER_MOOTOOLS_DESC">
                    <option value="1">Yes</option>
                    <option value="0">No</option>
                </field>
                <field name="TPL_TEMPLATENAME_PARAMETER_MODERNIZR_DOC" type="spacer" hr="false" />
                <field type="spacer" hr="true" />
				<!-- PIE-->
  				<field name="pie" type="radio" default="1" label="TPL_TEMPLATENAME_PARAMETER_PIE_LABEL" description="TPL_TEMPLATENAME_PARAMETER_PIE_DESC">
  					<option value="0">JNO</option>
  					<option value="1">JYES</option>
  				</field>
  				<field name="TPL_TEMPLATENAME_PARAMETER_PIE_DOC" type="spacer" hr="false" />
                <!--- FRONTPAGE COMPONENT HIDE -->
                <field name="frontpage" type="radio" default="1" label="TPL_TEMPLATENAME_PARAMETER_FRONTPAGE_LABEL" description="TPL_TEMPLATENAME_PARAMETER_FRONTPAGE_DESC">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
                <field name="TPL_TEMPLATENAME_PARAMETER_FRONTPAGE_DOC" type="spacer" hr="false" />
			</fieldset>
		</fields>
	</config>
	
</extension>
