<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 2.5//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/2.5/template-install.dtd">

<extension version="2.5" type="template" method="upgrade">
	
	<name>mason</name><!-- name the template -->
	<creationDate>2013-01-17</creationDate><!-- the date your are beginn to code -->
	<author>KevinSolomon</author><!-- your name (oops, I repeat myself) -->
	<copyright>Copyright Â© xxxx KevinSolomon.com</copyright><!-- for who you are coding -->
	<authorEmail>kevin@KevinSolomon.com</authorEmail><!-- your email address -->
	<authorUrl>http://www.KevinSolomon.com</authorUrl><!-- your url -->
	<version>1.0.0</version><!-- give your template a number -->
	<description><![CDATA[ 
		<h1>mason</h1>
		<p><img src="../templates/mason/template_preview.png" /></p>
		<h2>Module positions</h2>
		<ol>
			<li>debug</li>
		</ol>
		<p>Created by <a href="http://www.KevinSolomon.com" target="_blank">KevinSolomon | KevinSolomon.com</a>.</p>
	]]></description><!-- change the description as you like -->
	
	<files><!-- no need to change -->
		<folder>css</folder>
		<folder>html</folder>
		<folder>images</folder>
		<folder>js</folder>
		<filename>apple-touch-icon-57x57.png</filename>
		<filename>apple-touch-icon-72x72.png</filename>
		<filename>apple-touch-icon-114x114.png</filename>
		<filename>component.php</filename>
		<filename>error.php</filename>
		<filename>favicon.ico</filename>
		<filename>index.php</filename>
		<filename>offline.php</filename>
		<filename>template_preview.png</filename>
		<filename>template_thumbnail.png</filename>
		<filename>templateDetails.xml</filename>
	</files>
	
	<languages folder="language"><!-- no need to change -->
		<language tag="de-DE">de-DE.tpl_mason.ini</language>
		<language tag="en-GB">en-GB.tpl_mason.ini</language>
	</languages>
	
	<positions><!-- define the positions for modules here -->
		<position>debug</position>
		<position>menu</position>
		<position>logo</position>
		<position>logo-subtext</position>
		<position>spotlight-quote</position>
		<position>position-3</position>
		<position>position-4</position>
		<position>position-5</position>
		<position>position-6</position>
		<position>position-7</position>
		<position>position-8</position>
		<position>position-9</position>
		<position>position-10</position>
		<position>position-11</position>
		<position>position-12</position>
		<position>position-13</position>
		<position>position-14</position>
	</positions>
	
	<config><!-- no need to change -->
		<fields name="params">
			<fieldset name="basic">
			  <!-- SITE TITLE -->
			  <field name="sitetitle"  type="text" default=""
					label="Site Title"
					description="Site Title"
					filter="string" />	
			  <!--- Site Description -->
			  <field name="sitedescription"  type="text" default=""
					label="Site Description"
					description="Site Description"
					filter="string" />	

			  <!--- FRONTPAGE GENERATOR TAG -->
                <field name="setGeneratorTag" type="text" default="Mason Framwork  - A Joomla 3.0 ! templates - http://kevinsolomon.com" label="Generator Meta Tag" description="Customise the generator meta tag output by your template." size="80" />
                <field name="verification" type="text" default="Content_string_Google_gives_you" label="Google verification meta" description="Change Content_string_Google_gives_you to the meta content value Google gave in their code. You only need the content value, not the complete code" filter="raw" size="80" />


                <!--- GOOGLE ANALYTICS CODE  -->
                <field name="analytics" type="text" default="UA-XXXXX-X" label="Google Analytics ID" description="Change UA-XXXXX-X to be your site's ID" size="15" filter="raw" />

                <!--- GOOGLE WEB FONTS CODE  -->
                <field name="googleWebFonts" type="text" default="copy the css link from Google here" label="Google Web Fonts" description="Paste in the link to the Google Web fonts collection that you want to be available to use in style.css. Visit http://code.google.com/webfonts, build a collection and then copy the link here" filter="raw" size="160" />					

			  <!-- MODERNIZR-->
  			  <field name="modernizr" type="radio" default="1" label="TPL_MASON_PARAMETER_MODERNIZR_LABEL" description="TPL_MASON_PARAMETER_MODERNIZR_DESC">
  					<option value="0">JNO</option>
  					<option value="1">JYES</option>
  				</field>

		     <!-- Load CSS library-->
  		     <field name="bootstrap" type="radio" default="0" label="TPL_MASON_PARAMETER_BOOTSTRAPCSS_LABEL" description="TPL_MASON_PARAMETER_BOOTSTRAPCSS_DESC">
  					<option value="0">foundation</option>
  					<option value="1">bootstrap</option>
  				</field>

				<!-- PIE-->
  				<field name="pie" type="radio" default="1" label="TPL_MASON_PARAMETER_PIE_LABEL" description="TPL_MASON_PARAMETER_PIE_DESC">
  					<option value="0">JNO</option>
  					<option value="1">JYES</option>
  				</field>

                <!--- Some New Stuff added by me -->

                <!-- LOAD MOOTOOLS-->
                <field name="mootools" type="radio" default="0" label="TPL_MASON_PARAMETER_MOOTOOLS_LABEL" description="TPL_MASON_PARAMETER_MOOTOOLS_DESC">
                    <option value="1">Yes</option>
                    <option value="0">No</option>
                </field>
                
                <!--- FRONTPAGE COMPONENT HIDE -->
                <field name="frontpage" type="radio" default="1" label="TPL_MASON_PARAMETER_FRONTPAGE_LABEL" description="TPL_MASON_PARAMETER_FRONTPAGE_DESC">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>

               
			</fieldset>
		</fields>
	</config>
	
</extension>
